[master]
${master_ip} ansible_user=${ssh_user} ansible_ssh_private_key_file=${ssh_private_key_path} ansible_become=true

[worker]
%{ for ip in worker_ips ~}
${ip} ansible_user=${ssh_user} ansible_ssh_private_key_file=${ssh_private_key_path} ansible_become=true
%{ endfor ~}

[all:children]
master
worker

[all:vars]
ansible_ssh_common_args='-o StrictHostKeyChecking=no'
