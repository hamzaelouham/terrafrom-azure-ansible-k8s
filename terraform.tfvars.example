# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

# Resource Group
resource_group_name = "rg-vm-natgw"
location            = "westeurope"

# Network Configuration
vnet_address_space      = ["10.0.0.0/16"]
subnet_address_prefixes = ["10.0.1.0/24"]

# VM Configuration
vm_name             = "vm-ubuntu"
vm_size             = "Standard_B2s"
admin_username      = "azureuser"
# Password must be 12-123 chars wclith uppercase, lowercase, number, and special char
admin_password = "YourSecureP@ssw0rd!"
os_disk_size_gb     = 30

# Security - Restrict SSH access to specific IP/CIDR in production
allowed_ssh_source = "*"

# Tags
tags = {
  Environment = "Development"
  ManagedBy   = "Terraform"
  Project     = "VM-NAT-Gateway"
}
